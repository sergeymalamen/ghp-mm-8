{
  "name": "GHP MM Sniffer",
  "version": "1.0",
  "slug": "ghp_mm_sniffer",
  "description": "Sniffer for GHP MM heat pump",
  "arch": ["aarch64", "amd64", "armv7"],
  "startup": "application",
  "boot": "auto",
  "host_network": true,
  "devices": ["/dev/ttyUSB0"],
  "options": {
    "serial_port": "/dev/serial/by-id/usb-FTDI_FT232R_USB_UART_BG009VVA-if00-port0",
    "mqtt_broker": "localhost",
    "mqtt_port": 1883,
    "mqtt_username": "",
    "mqtt_password": ""
  },
  "schema": {
    "serial_port": "str",
    "mqtt_broker": "str",
    "mqtt_port": "int",
    "mqtt_username": "str?",
    "mqtt_password": "str?"
  }
}
